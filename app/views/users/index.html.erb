
<div class="container">
	<div class="row">
		<div class="col-xs-3">
		 <%= render "layouts/list", {book: @book,user: @user} %>
		</div>

		<div class="col-xs-9">
			<div class="usersindex">
				<h1>Users</h1>
				<table class="table table-striped">
					<thead>
					<tr>
					<td></td>
					<td>image</td>
					<td>name</td>
					</tr>
					</thead>


					<tbody>
					  <% @users.each do |user| %>
					  <tr>
					  	 <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
					    <td><%= user.name %></td>
					    <td><%= link_to "Show", user_path(user) %></td>
					    </tr>
					  <% end %>
					</tbody>
				</table>
		    </div>
		</div>
	</div>
</div>
