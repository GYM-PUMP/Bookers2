
<div class="container">
<div class="row">
    <div class="col-md-5">
<h1>User info</h1>

<%= form_for(@user) do |f| %>
 
    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
 
 <h4>Name
    <%= f.text_field :name %></h4>
    <h4>Image
    <%= f.attachment_field :profile_image %></h4>
    <h4>Introduction
    <%= f.text_area :introduction %></h4>
    <br>
    <%= f.submit "Update User" %>
<% end %>
</div>
 <footer>
 	<div class="row">
        <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
        </div>
    </div>
</footer>
</div>
</div>
