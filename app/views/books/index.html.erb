
<div class="container">
  <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
<div class="row">
<div class="col-md-3">
<%= render "layouts/list", {book: @book,user: @user} %>
</div>

 


<div class="col-md-9">
<div class="booksindex">
<h1>Books</h1>
 

<table class="table table-striped">
<thead>
  <tr>
    <th></th>
    <th>Title</th>

    <th>Opinion</th>
  </tr>
</thead>

<tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>
