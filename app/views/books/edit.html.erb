<div class="container">
<div class="row">
     <div class="col-xs-10 col-xs-offset-3">
<h1>Editing Book</h1>
</div>
</div>


<%= form_for(@book) do |f| %>
 
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <% end %>
<div class="row">
    <div class="col-xs-10 col-xs-offset-3">
 <h4>Title</h4>
    <%= f.text_field :title %>
</div>
</div>
<div class="row">
    <div class="col-xs-10 col-xs-offset-3">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
</div>
</div>
<br>

<div class="row">
    <div class="col-xs-10 col-xs-offset-3">
<%= f.submit "Update Book", class: "btn btn-primary" %>
</div>
</div>
<% end %>
<div class="row">
    <div class="col-xs-10 col-xs-offset-3">
<%= link_to "Show", book_path %> |
<%= link_to "Back", books_path %>
</div>
</div>
</div>


<footer>
        <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
        </div>
</footer>


</div>

</div>
