

<h2>User info</h2>
<%= attachment_image_tag user, :profile_image,:fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<table class="table table-striped">
	<tbody>
<tr>
	<th>name</th>
<th><%= user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= user.introduction %></th>
</tr>
</tbody>
</table>
<%= link_to "", edit_user_path(user.id),{class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"} %>

<br>
<br>

<h2>New book</h2>


<%= form_for(book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12" %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "col-xs-12" %>
    <br>
    <br>
    <br>

    <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>
<% end %>

